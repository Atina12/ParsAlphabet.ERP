<link href="~/lib/ModulesCss/StandardTimeSheetLine.css" rel="stylesheet"/>

<div id="AddEditModalPersonnelCalendar" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-xl">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right">
                    <h5 class="modal-title mt-0" id="modal_title_personnelCalendar">ثبت تعطیلات </h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right pb-5 overflow-visible" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-flex align-items-center text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption_personnelCalendar"></lable>
                            <span id="modal_keyid_value_personnelCalendar"></span>
                        </div>
                    </div>
                </div>
                <fieldset class="group-box group-box-green pt-1 mt-2">
                    <legend>انتقال ماه</legend>
                    <div id="copyMonth">
                        <div class="d-flex">

                            <div class="form-group col-sm-4 p-0">
                                <div class="col-lg-12 chosen-container-parent">
                                    <div class="d-flex align-items-center">
                                        <span id="startMonthTitle" class="ml-2">ماه مبدا:</span>
                                        <select id="startMonth" data-placeholder="انتخاب کنید" class="form-control select2" tabindex="500"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-sm-4 p-0 mr-1">
                                <div class="col-lg-12 chosen-container-parent">
                                    <div class="d-flex align-items-center">
                                        <span id="endMonthTitle" class="ml-2">ماه مقصد:</span>
                                        <select id="endMonth" data-placeholder="انتخاب کنید" class="form-control select2" tabindex="501"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-sm-1">
                                <button type="button" id="monthTransit" onclick="copyMonth()" class="btn waves-effect waves-light btn-success" tabindex="502">ثبت</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset id="fieldsetMonth" class="group-box mt-3 group-box-orange">
                    <legend>
                        <span id="yearOfCelender"></span>
                        <span id="fiscalYear" class="d-none"></span>
                    </legend>
                    <div class="d-flex justify-content-between workDay_or_shiftAssignment mb-2">
                        <div class="d-flex justify-content-around align-items-center">
                            <span>روز غیر کاری</span>
                            <span class="nonWorkingDayColor"></span>

                        </div>

                    </div>
                    <div id="showMonth" class="w-100 d-flex justify-content-center align-items-center mb-3"></div>
                    <div id="showDays" class="w-100">
                        <ul id="showDaysWeekHeader" class="d-flex w-100">
                            <li>
                                <div class="w-100">شنبه</div>
                            </li>
                            <li>
                                <div class="w-100">یکشنبه</div>
                            </li>
                            <li>
                                <div class="w-100">دوشنبه</div>
                            </li>
                            <li>
                                <div class="w-100">سه شنبه</div>
                            </li>
                            <li>
                                <div class="w-100">چهارشنبه</div>
                            </li>
                            <li>
                                <div class="w-100">پنجشنبه</div>
                            </li>
                            <li>
                                <div class="w-100 text-danger">جمعه</div>
                            </li>
                        </ul>
                        <ul id="showDaysWeekLine" class="d-flex flex-wrap w-100"></ul>
                    </div>
                </fieldset>

            </div>
            <div class="modal-footer">
                <button id="modal-close" onclick="modal_close('AddEditModalPersonnelCalendar')" class="btn btn-secondary waves-effect"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Modules/HR/StandardTimeSheetHoliday/StandardTimeSheetHolidayIndex.js" type="text/javascript"></script>