@{
    ViewBag.Title = "موقعیت دارایی ثابت";
}


@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")
<!--Modal-->
<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-md">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label>نام </label>
                        <div>
                            <input id="name" type="text" class="form-control atoz-valid" maxlength="50" title="" required tabindex="1">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>کشور </label>
                        <select id="countryId" class="form-control" required tabindex="2"></select>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>ولایت</label>
                        <div>
                            <select id="stateId" class="form-control select2" data-parsley-selectvalzero data-parsley-errors-container="#stateIdError" tabindex="3">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="stateIdError"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شهر </label>
                        <div>
                            <select id="cityId" class="form-control select2" required tabindex="4"></select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>نمبر خانه (Postal Code)</label>
                        <div>
                            <input id="postalCode" type="text" class="form-control str-number" maxlength="10" title="" tabindex="5">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>آدرس</label>
                        <div>
                            <input id="address" type="text" class="form-control" maxlength="100" title="" tabindex="6">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>وضعیت</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="7">
                            <input id="isActive" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="دارد,ندارد"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="modal_save()" class="btn btn-success waves-effect waves-light" tabindex="8" title="Ctrl + S"><i class="fa fa-save"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect" title="Esc"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>
<!--Modal-->
<script src="/Modules/FA/FixedAssetLocation/FixedAssetLocationIndex.js"></script>