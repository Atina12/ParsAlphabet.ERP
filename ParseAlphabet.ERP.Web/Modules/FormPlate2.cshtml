<div class="content-page displaynone" id="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="card mb-2" id="formplate2HeaderInfo">
                <div class="card-body">
                    <div class="row justify-content-between">
                        <div class="col-md-2 form-group mb-0" id="head-title">
                            <select class="form-control select2" id="form_keyvalue"></select>
                        </div>
                        <div class="col-md-6" id="head-info">
                            <button onclick="backToList()" type="button" class="btn btn-info waves-effect waves-light float-left"><i class="fa fa-list-ul" style="margin-left:5px"></i>لیست</button>
                            <button onclick="assigned_excel()" type="button" class="ml-1 btn btn-excel waves-effect float-left"><i class="fa fa-file-excel" style="margin-left: 5px"></i>اکسل</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="formplate-main">
                <div class="formplate-item" id="formplate2">
                    <div class="card">
                        <div class="header-title d-flex">
                            <label></label>
                            <span class="assigned-title">تخصیص داده شده</span>
                        </div>
                        <div class="card-body" id="pagetable2">
                            @await Html.PartialAsync("/Modules/AllocationPageTable.cshtml")
                        </div>
                    </div>
                    <div class="assigment-controls">
                        <button class="btn btn-info" onclick="assign_ins()" id="segment_line_ins">
                            <i class="fas fa-arrow-left"></i>
                        </button>
                        <button class="btn btn-info" onclick="assign_del()" id="segment_line_del">
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
                <div class="formplate-item" id="formplate1">
                    <div class="card">
                        <div class="header-title d-flex">
                            <label class="formPlate2_Title"></label>
                            <span class="assigned-title">تخصیص داده نشده</span>
                        </div>
                        <div class="card-body" id="pagetable1">
                            @await Html.PartialAsync("/Modules/AllocationPageTable.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

