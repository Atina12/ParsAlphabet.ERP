@{
    ViewBag.Title = "گروه تفصیل";
}

@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")


<!--Modal-->
<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-lg">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right " data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-3">
                        <label>شماره سطر</label>
                        <div>
                            <input id="lineNo" type="text" class="form-control number" title="" tabindex="1" disabled>
                        </div>
                    </div>
                    <div class="form-group col-sm-3">

                        <label>گروه تفصیل</label>
                        <div>
                            <select id="headerId" type="text" class="form-control select2" title="" required data-parsley-errors-container="#bankIdError" tabindex="2">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="bankIdError">
                        </div>
                    </div>

                    <div class="form-group col-sm-3">
                        <label>نقطه شروع</label>
                        <div>
                            <input id="startNo" type="text" class="form-control number" title="" tabindex="3" required>
                        </div>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>نقطه پایان</label>
                        <div>
                            <input id="endNo" type="text" class="form-control number" title="" tabindex="4" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="modal_save('AddEditModal','newpagetable');" class="btn btn-success waves-effect waves-light" tabindex="5"><i class="fa fa-check-circle"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>

<script src="/Modules/GN/NoSeriesLine/NoSeriesLineIndex.js"></script>