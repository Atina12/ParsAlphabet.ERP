@{
    ViewBag.Title = "چیدمان چک بانکی";
}

<link href="~/lib/ModulesCss/Navigate.css" rel="stylesheet"/>
<link href="~/Content/css/checkbox-button.css?ver=@Guid.NewGuid().ToString().Replace("-", "")" rel="stylesheet"/>

<link href="~/lib/jquery-ui/css/jquery-ui.css" rel="stylesheet"/>
<link href="~/Content/css/bootstrap4-toggle.min.css" rel="stylesheet"/>

<div class="content-page displaynone" id="content-page">
<div class="content" id="TreasuryBondDesign">
<div class="container-fluid">
<div class="row">
<div class="col-12">
<div class="card m-b-30 m-t-15">
<div class="header-title d-flex">
    <span>@ViewBag.Title</span>
    <div class="button-items">
        <button id="showLabelsOrContentCheque" type="button" onclick="showLabelsOrContentCheque(this)" data-content="true" class="btn btn-success waves-effect">نمایش محتوا</button>
        <button id="initialSettings" type="button" onclick="initialSettings()" class="btn btn-success waves-effect">بازنشانی</button>
        <button id="saveForm" type="button" onclick="saveForm()" class="btn btn-success waves-effect" title="Ctrl + S"><i class="fa fa-save"></i>ذخیره</button>
        <button id="deleteBankForm" type="button" onclick="deleteBankForm()" class="btn btn-danger waves-effect"><i class="fa fa-trash"></i>حذف</button>
        <button id="printForm" type="button" onclick="printCheque()" class="btn btn-success waves-effect"><i class="fa fa-print ml-2"></i>چاپ</button>
    </div>
</div>
<div class="card-body" data-parsley-validate>

<div class="row col-12">
    <div class="col-12 d-flex displaynone" id="admissionImagingBox">
        <div class="form-group col-lg-2">
            <label>شناسه</label>
            <div>
                <input id="admissionImagingId" type="text" class="form-control number" maxlength="10" readonly @*value="@ViewContext.RouteData.Values["id"]"*@/>
            </div>
        </div>
        <div class="form-group col-lg-2">
            <label>ثبت کننده</label>
            <div>
                <input id="userFullName" type="text" class="form-control" maxlength="10" readonly/>
            </div>
        </div>
        <div class="form-group col-lg-2">
            <label>تاریخ ثبت</label>
            <div>
                <input id="createDateTime" type="text" class="form-control" maxlength="10" readonly/>
            </div>
        </div>
    </div>
</div>

<div class="row col-12">
    <div class="col-12 d-flex">

    </div>
</div>

<fieldset id="copyCheque" class="tab-content group-box group-box-gray mt-3">
    <legend>کپی چک</legend>

    <div class="row">
        <div class="col-2">
            <div class="form-group">
                <label>بانک مبدا</label>
                <div class="col-12 chosen-container-parent">
                    <select data-placeholder="انتخاب کنید" id="sourceBank" class="select2 select2-quick-access" tabindex="1">
                        <option value="0">انتخاب کنید</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="form-group">
                <label>بانک مقصد</label>
                <div class="col-12 chosen-container-parent">
                    <select data-placeholder="انتخاب کنید" id="destinationBank" class="select2 select2-quick-access" tabindex="2">
                        <option value="0">انتخاب کنید</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-1">
            <div class="form-group">
                <label style="visibility:hidden">کپی چک بانکی</label>
                <div class="col-12 chosen-container-parent">
                    <button id="copybankCheque" type="button" class="btn btn-success waves-effect" style="width:60px" tabindex="3">کپی</button>
                </div>
            </div>
        </div>

    </div>
</fieldset>

<fieldset id="publicSettingCheque" class="group-box group-box-orange mt-3">
    <legend>تنظیمات عمومی چک</legend>
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <label>بانک</label>
                <div class="col-12 chosen-container-parent">
                    <select data-placeholder="انتخاب کنید" id="bankId" class="select2 select2-quick-access" tabindex="4">
                        <option value="0">انتخاب کنید</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label>رنگ چاپ</label>
                <div class="col-12 chosen-container-parent">
                    <select data-placeholder="انتخاب کنید" id="colorPrint" class="select2 select2-quick-access" tabindex="5">
                        <option value="black">مشکی</option>
                        <option value="blue">آبی</option>
                        <option value="red">قرمز</option>
                        <option value="green">سبز</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>عرض چک</label>
                <div class="col-12 chosen-container-parent">
                    <input id="chequeWidth" type="text" class="form-control decimal mask" data-inputmask="'mask':'9{1,2}/9{1,1}','radixPoint':'/'" maxlength="4" tabindex="6" placeholder="12cm - 20cm"/>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>ارتفاع چک</label>
                <div class="col-12 chosen-container-parent">
                    <input id="chequeHeight" type="text" class="form-control decimal mask" data-inputmask="'mask':'9{1,2}/9{1,1}','radixPoint':'/'" maxlength="4" tabindex="7" placeholder="6cm - 10cm"/>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label>وضعیت مقادیر چک</label>
                <div class="col-12 chosen-container-parent">
                    <select data-placeholder="انتخاب کنید" id="statusOfBankCheckAmounts" class="select2 select2-quick-access" tabindex="8">
                        <option value="0">انتخاب کنید</option>
                        <option value="1" data-id="numericDate">تاریخ عددی چک</option>
                        <option value="2" data-id="letterDate">تاریخ حروفی چک</option>
                        <option value="3" data-id="letterAmount">مبلغ به حروف</option>
                        <option value="4" data-id="recipient">گیرنده چک</option>
                        <option value="5" data-id="nationalCode">به شماره ملی</option>
                        <option value="6" data-id="numericAmount">مبلغ به عدد</option>
                        <option value="7" data-id="description">توضیحات خاص</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group col-sm-2">
            <label>وضعیت</label>
            <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="9">
                <input id="isActive" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
            </div>
        </div>
    </div>
</fieldset>

<fieldset id="privateSettingCheque" class="group-box group-box-orange mt-3">
    <legend>مقادیر چک</legend>

    <div class="row">

        <div class="col-sm-1">
            <div class="form-group">
                <label>فاصله از بالا</label>
                <div class="col-12 chosen-container-parent">
                    <input id="distanceFromTop" type="text" class="form-control decimal mask" data-inputmask="'mask':'9{1,2}/9{1,2}','radixPoint':'/'" maxlength="5" tabindex="10" placeholder="cm" disabled/>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>فاصله از راست</label>
                <div class="col-12 chosen-container-parent">
                    <input id="distanceFromRight" type="text" class="form-control decimal mask" data-inputmask="'mask':'9{1,2}/9{1,2}','radixPoint':'/'" maxlength="5" tabindex="11" placeholder="cm" disabled/>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>عرض</label>
                <div class="col-12 chosen-container-parent">
                    <input id="widthChequeElements" type="text" class="form-control decimal mask" data-inputmask="'mask':'9{1,2}/9{1,2}','radixPoint':'/'" maxlength="5" tabindex="12" placeholder="cm" disabled/>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>ارتفاع</label>
                <div class="col-12 chosen-container-parent">
                    <input id="heightChequeElements" type="text" class="form-control decimal mask" data-inputmask="'mask':'9{1,2}/9{1,2}','radixPoint':'/'" maxlength="5" tabindex="13" placeholder="cm" disabled/>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>فونت</label>
                <div class="col-12 chosen-container-parent">
                    <select data-placeholder="انتخاب کنید" id="fontTextCheque" class="select2 select2-quick-access" tabindex="14" disabled>
                        <option value="iransans">iransans</option>
                        <option value="B Badr">b badr</option>
                        <option value="B Titr">b titr</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <label>اندازه فونت</label>
                <div class="col-12 chosen-container-parent">
                    <input id="fontSizeCheque" type="text" class="form-control number" maxlength="2" tabindex="15" placeholder="px" disabled/>
                </div>
            </div>
        </div>
        <div class="col-sm-2" style="display:none" id="numericChequeElementOptions">
            <label>تنظیمات تاریخ</label>
            <div class="col-12 chosen-container-parent">
                <select id="numericDateSetting" data-placeholder="انتخاب کنید" onchange="numericDateSetting(this)" class="select2 select2-quick-access elementSetting" tabindex="16">
                    <option value="0">متنی</option>
                    <option value="1">چهارخانه</option>
                </select>
            </div>
        </div>
        <div class="col-sm-2" style="display:none" id="numericAmountElementOptions">
            <label>تنظیمات مبلغ به عدد</label>
            <div class="col-12 chosen-container-parent">
                <select id="numericAmountSetting" data-placeholder="انتخاب کنید" onchange="numericAmountSetting(this)" class="select2 select2-quick-access elementSetting" tabindex="17">
                    <option value="0">متنی</option>
                    <option value="1">چهارخانه</option>
                </select>
            </div>
        </div>
    </div>
</fieldset>

<fieldset id="setCheque" class="group-box group-box-green mt-3">
    <legend>چک</legend>
    <div class="d-flex justify-content-center align-items-center">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div id="rulerAndCheque" style=" position: relative;" class="d-flex justify-content-center align-items-start">
                <div>
                    <div id="horizontal-ruler" style=" height: 6mm; color: black; background-color: white; position: relative" class="d-flex mt-1 mr-1 mb-1">
                        <div id="horizontal-ruler-content" class="h-100 d-flex flex-row-reverse"></div>
                        <div id="horizontal-ruler-pointer" style=" position: absolute;" class="w-100 h-100">
                            <div class="h-100" style="background-color:green;z-index:999;width:1px;display:none"></div>
                        </div>
                    </div>
                    <div id="chequeForPrint">
                        <div id="cheque" style=" border: 1px solid black; background-color: white; overflow: hidden; position: relative;" class="mt-1 mr-1 mb-1">
                            <div id="chequeBackground" style="position: absolute;background: url('/Content/images/dot.png');background-repeat: repeat;background-size: 10mm 10mm;opacity: 0.3 ;width:100%;height:100%"></div>

                            <div id="numericDate" style="display:flex;padding:3px;width: max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white" class="elementFocus">

                                <div id="numericDateLabel" style="width:100%;display:none">
                                    <div id="numericDateLabelText" style="width:100%;display:flex"></div>
                                    <div id="numericDateLabelBox" style="display:none;width:100%"></div>
                                </div>

                                <div id="numericDateContentLable" style="width:100%">
                                    <div id="numericDateContent" style="display:flex;width:100%">تاریخ عددی چک</div>
                                    <div id="numericDateContentOnBox" style="display:none;width:100%"></div>
                                </div>

                            </div>

                            <div id="letterDate" style="display:flex;padding:3px; width: max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white;padding:3px" class="elementFocus">
                                <div id="letterDateLabel" style="display:none">
                                    <span>دوازده حوت هزار و چهارصد و یک</span>
                                </div>

                                <div id="letterDateContent" style="width:100%">
                                    تاریخ حروفی چک
                                </div>
                            </div>

                            <div id="letterAmount" style=" display:flex;padding:3px;width: max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white;" class="elementFocus">
                                <div id="letterAmountLabel" style="display:none">
                                    <span>پانزده میلیارد ریال&#10045&#10045&#10045</span>
                                </div>

                                <div id="letterAmountContent" style="width:100%">
                                    <div>مبلغ به حروف</div>
                                </div>
                            </div>

                            <div id="recipient" style="display:flex;padding:3px;width:max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white" class="elementFocus">
                                <div id="recipientLable" style="display:none">
                                    <span>علی اکبری&#10045&#10045&#10045</span>
                                </div>

                                <div id="recipientContent" style="width:100%">
                                    <div>گیرنده چک</div>
                                </div>
                            </div>

                            <div id="nationalCode" style="display:flex;padding:3px; width: max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white" class="elementFocus">
                                <div id="nationalCodeLable" class="w-100" style="display:none">
                                    <div></div>
                                </div>
                                <div id="nationalCodeContent" class="w-100">
                                    <div>به شماره ملی</div>
                                </div>
                            </div>

                            <div id="numericAmount" dir="ltr" style="display:flex;padding:3px; width: max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white" class="elementFocus">
                                <div id="numericAmountLable" style="display:none;width:100%">
                                    <div id="numericAmountLableText" style="width:100% ; text-align:left"></div>
                                    <div id="numericAmountLableBox" style="display:none;width:100%"></div>
                                </div>

                                <div id="numericAmountContentLable" style="width:100%">
                                    <div id="numericAmountContent" style="width:100%;text-align:left">مبلغ به عدد</div>
                                    <div id="numericAmountContentOnBox" style="display:none;width:100%;text-align:left"></div>
                                </div>
                            </div>

                            <div id="description" style="padding:3px; width: max-content; cursor: pointer; overflow: hidden; position: absolute;border: 2px solid #BBB;border-radius: 3px;background-color: white" class="elementFocus">
                                <div id="descriptionLable" style="display:none;width:100%">
                                    <span>چک به حساب گذاشته شود</span>
                                </div>
                                <div id="descriptionContent" style="width:100%">
                                    <div>توضیحات خاص</div>
                                </div>
                            </div>

                            <div style="position:absolute;width:100%;height:100%"></div>

                        </div>
                    </div>
                </div>
                <div>
                    <div id="gap" style=" width: 6mm; height: 6mm; color: black;" class="m-1 d-flex justify-content-center align-items-center">cm</div>
                    <div id="vertical-ruler" style=" width: 6mm; position: relative; color: black; background-color: white;" class="m-1">
                        <div style=" height: 6mm; transform: rotate(-90deg); position: relative">
                            <div id="vertical-ruler-content" class="h-100 d-flex"></div>
                            <div id="vertical-ruler-pointer" style="position: absolute; height: 100%; top: 0px ">
                                <div class="h-100" style="display:none;background-color:green;z-index:999;width :1px"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</fieldset>

</div>
</div>
</div>
</div>
</div> <!-- end col -->
</div>
</div>


<script src="/js/formplate.js"></script>
<script src="/js/formplate1.js"></script>
<script type="text/javascript" src="/Modules/FM/TreasuryBondDesign/TreasuryBondDesignIndex.js"></script>