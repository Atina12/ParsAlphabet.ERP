                                    </label>
                                </div>
                                <div class="col-sm-6 pr-0">
                                    <label>
                                        <input id="s1" data-value="1" type="checkbox" onchange="arrayChecked(this)" />
                                        درخواست انتقال بین منابع
                                    </label>
                                </div>
                                <div class="col-sm-6 pr-0">
                                    <label>
                                        <input id="s1" data-value="1" type="checkbox" onchange="arrayChecked(this)" />
                                        دریافت وجوه
                                    </label>
                                </div>*@
                        </div>
                        <div id="fillStageItemContainer"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="treasurySubjectSave();" class="btn btn-success waves-effect waves-light" tabindex="4" title="Ctrl + S"><i class="fa fa-check-circle"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect" title="Esc"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>

