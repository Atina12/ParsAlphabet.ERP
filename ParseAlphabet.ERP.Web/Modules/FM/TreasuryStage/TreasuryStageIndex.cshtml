@{
    ViewBag.Title = "مراحل خزانه";
}

@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")

<!--Modal-->
<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-md">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label>نام مرحله</label>
                        <div>
                            <input id="stageName" type="text" class="form-control atoz-valid" title="" data-parsley-group="addservice" required data-parsley-selectvalzero ata-parsley-errors-container="#stageNameErrorContainer" tabindex="1"/>
                        </div>
                        <div id="stageNameErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>مرحله دریافت/پرداخت</label>
                        <div>
                            <select data-placeholder="انتخاب کنید" id="stageInOut" class="form-control select2 select2-quick-access" required data-parsley-selectvalzero data-parsley-errors-container="#stageInOutErrorContainer" tabindex="2">
                                <option value="0">انتخاب کنید</option>
                                <option value="1">دریافت</option>
                                <option value="2">پرداخت</option>
                                <option value="3">هردو</option>
                            </select>
                        </div>
                        <div id="stageInOutErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>کلاس مرحله</label>
                        <div>
                            <select data-placeholder="انتخاب کنید" id="stageClassId" class="form-control select2 select2-quick-access" required data-parsley-selectvalzero data-parsley-errors-container="#stageClassIdErrorContainer" tabindex="3">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="stageClassIdErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>وضعیت</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="4">
                            <input id="isActive" type="checkbox" name="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>نوع سند</label>
                        <div>
                            <select data-placeholder="انتخاب کنید" id="documentTypeId" class="form-control select2 select2-quick-access" required data-parsley-selectvalzero data-parsley-errors-container="#documentTypeIdErrorContainer" tabindex="5">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="documentTypeIdErrorContainer"></div>
                    </div>
                    @*<div class="form-group col-sm-6">
                            <label>نوع وجه/گردش برگه</label>
                            <div>
                                <select data-placeholder="انتخاب کنید" id="fundItemType" class="form-control select2 select2-quick-access" required data-parsley-selectvalzero data-parsley-errors-container="#fundItemTypeErrorContainer" tabindex="4">
                                    <option value="0">انتخاب کنید</option>
                                    <option value="1">نوع وجه برگه</option>
                                    <option value="2">نوع گردش برگه</option>
                                </select>
                            </div>
                            <div id="fundItemTypeErrorContainer"></div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label>دریافت/پرداخت</label>
                            <div>
                                <select data-placeholder="انتخاب کنید" id="inOut" class="form-control select2 select2-quick-access" required data-parsley-selectvalzero data-parsley-errors-container="#inOutErrorContainer" tabindex="5">
                                    <option value="0">انتخاب کنید</option>
                                    <option value="1">دریافت</option>
                                    <option value="2">پرداخت</option>
                                </select>
                            </div>
                            <div id="inOutErrorContainer"></div>
                        </div>*@
                    @*<div class="form-group col-sm-6">
                            <label>مرحله قبلی</label>
                            <div>
                                <select id="previousStageId" class="form-control select2" required data-parsley-selectvalzero data-parsley-errors-container="#previousStageIdErrorContainer" tabindex="6">
                                    <option value="0">انتخاب کنید</option>
                                </select>
                            </div>
                            <div id="previousStageIdErrorContainer"></div>
                        </div>*@
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="modal_save();" class="btn btn-success waves-effect waves-light" tabindex="6" title="Ctrl + S"><i class="fa fa-check-circle"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect"><i class="fa fa-times-circle" title="Esc"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/formplate.js"></script>
