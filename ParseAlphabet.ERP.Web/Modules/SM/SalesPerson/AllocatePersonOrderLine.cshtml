<div id="allocatePersonOrderListModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-xl">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="col-sm-6 text-right">
                    <h5 class="modal-title mt-0" id="modal_title">جستجو سفارشات</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" style="height:100%">
                <fieldset class="group-box group-box-gray" style="overflow-x:hidden;overflow-y:scroll;height:340px;width:100%">
                    <legend>سفارشات</legend>

                    <div class="table-responsive" style="margin:0 auto;padding-bottom:10px">
                        <table class="table table-styles border mb-0" id="personOrderListPagetable">
                            <thead>
                            <tr>
                                <th class="col-width-percent-3">
                                    <input type="checkbox" onchange="checkAllOrder()" id="checkAllOrder"/>
                                </th>
                                <th class="col-width-percent-5">ردیف</th>
                                <th class="col-width-percent-6">شناسه</th>
                                <th class="col-width-percent-10">تاریخ سفارش</th>
                                <th class="col-width-percent-10">نام شعبه</th>
                                <th class="col-width-percent-10">واحد پول</th>
                                <th class="col-width-percent-13">کارمند</th>
                                <th class="col-width-percent-13">نام کاربر</th>
                                <th class="col-width-percent-10">تاریخ ثبت</th>
                                <th class="col-width-percent-10">مبلغ کل سفارش</th>
                                <th class="col-width-percent-10">وضعیت</th>
                            </tr>
                            </thead>
                            <tbody id="tempPersonOrder">
                            <tr id="emptyRow">
                                <td colspan="10" class="text-center">سطری وجود ندارد</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </fieldset>
                <div class="row dir-ltr">
                    <div class="form-group mb-0 mt-2">
                        <div class="col-lg-12">
                            <button type="button" id="getPersonOrderLine" onclick="personorderLineList()" class="btn btn-info ml-1">جستجو <i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <fieldset class="group-box group-box-gray" style="overflow-x:hidden;overflow-y:scroll;height:340px;width:100%">
                    <legend>آیتم های سفارشات انتخاب شده</legend>

                    <div class="table-responsive" style="margin:0 auto;padding-bottom:10px">
                        <table class="table table-styles border mb-0" id="personOrderLineListPagetable">
                            <thead>
                            <tr>
                                <th class="col-width-percent-3">
                                    <input type="checkbox" onchange="checkAllOrderLine()" id="checkAllLine"/>
                                </th>
                                <th class="col-width-percent-5">ردیف</th>
                                <th class="col-width-percent-6">شناسه</th>
                                <th class="col-width-percent-10">نوع</th>
                                <th class="col-width-percent-44">آیتم</th>
                                <th class="col-width-percent-10">تعداد سفارش</th>
                                <th class="col-width-percent-12">تعداد تائید شده</th>
                                <th class="col-width-percent-10">تعداد مانده</th>
                            </tr>
                            </thead>
                            <tbody id="tempPersonOrderLine">
                            <tr id="emptyRow">
                                <td colspan="10" class="text-center">سطری وجود ندارد</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button id="allocateToInvoice" onclick="allocateToInvoice()" class="btn btn-success waves-effect waves-light" tabindex="12"><i class="fa fa-save"></i>تخصیص به صورتحساب</button>
                <button id="modalClose" onclick="modal_close('allocatePersonOrderListModal')" class="btn btn-secondary waves-effect"><i class="fa fa-times-circle"></i>بستن</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Modules/SM/SalesPersonOrder/AllocatePersonOrder.js"></script>