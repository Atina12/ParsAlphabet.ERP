@{
    ViewBag.Title = "حساب‌ مشتریان";
}

@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")

<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-md">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label>مشتری</label>
                        <div>
                            <select id="personId" class="form-control select2" tabindex="1" required></select>
                            <input type="hidden" id="personTypeId" value="1"/>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>بانک</label>
                        <div>
                            <select id="bankId" type="text" class="form-control select2" title="" required tabindex="2"></select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <lablel>شماره حساب</lablel>
                        <input id="accountNo" type="text" class="form-control" title="" tabindex="3" required maxlength="20" data-parsley-accontno data-parsley-errors-container="#accountNoErrorContainer"/>
                        <div id="accountNoErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <lablel>شماره شبا</lablel>
                        <input id="shebaNoStr" type="text" class="form-control" title="" tabindex="4" data-inputmask="'mask':'IR-9999-9999-9999-9999-9999-9999'"/>
                    </div>
                    <div class="form-group col-sm-6">
                        <lablel>شماره کارت</lablel>
                        <input id="cardNo" type="text" class="form-control" title="" tabindex="5" data-parsley-cardno data-inputmask="'mask':'9999-9999-9999-9999'"/>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>حساب اصلی</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isDefualt');" tabindex="6">
                            <input id="isDefualt" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="بلی,خیر"/>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label> وضعیت</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="7">
                            <input id="isActive" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="saveCustomerAccount();" class="btn btn-success waves-effect waves-light" tabindex="8" title="Ctrl + S"><i class="fa fa-check-circle"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect" title="Esc"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>


<script src="/Modules/SM/CustomerAccount/CustomerAccountIndex.js"></script>