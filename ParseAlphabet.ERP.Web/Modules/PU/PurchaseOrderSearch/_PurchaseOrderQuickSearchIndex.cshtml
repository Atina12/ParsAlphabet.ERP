<head>
    <style>
        #lineAveragePricesModal td, #lineAveragePricesModal th{
            font-size : 12px !important
        }

        #averagePricesModal .modal-content{
            height:auto !important
        }
    </style>
</head>

<div class="card-body m-2 bg-white dir-rtl text-right quickSearch-container" id="PurchasePersonQuickSearchContainer" data-parsley-validate>
    <div>
        <fieldset class="group-box group-box-gray">
            <legend>فیلتر</legend>
            <div class="col-12 row">
                <div class="form-group col-sm-2">
                    <label>نوع آیتم</label>
                    <div>
                        <select id="itemTypeId" class="form-control select2" tabindex="1" required data-parsley-errors-container="#itemTypeIdErrorContainers">
                        </select>
                        <div id="itemTypeIdErrorContainers"></div>
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label>مبلغ</label>
                    <div class="col-sm-12 chosen-container-parent double-input-box">
                        <input id="fromPrice" type="text" class="form-control money double-input" data-parsley-greaterthanequal="#toPrice" data-parsley-errors-container="#fromPriceError" tabindex="2" placeholder="از :" maxlength="13"/>
                        <input id="toPrice" type="text" class="form-control money double-input" tabindex="3" placeholder="تا :" maxlength="13"/>
                    </div>
                    <div id="fromPriceError"></div>
                </div>
                <div class="form-group col-sm-3">
                    <label>تاریخ ثبت</label>
                    <div class="double-input-box">
                        <div class="double-input">
                            <input type="text" id="fromDate" class="form-control number persian-date" placeholder="____/__/__" value="@PersianDateTime.GetFirstDayOfCurrentMonth()" data-inputmask="'mask':'9999/99/99'" data-parsley-validate-if-empty="true" data-parsley-shamsidate data-parsley-compareshamsidateyear="toDate" data-parsley-compareshamsidate="toDate" data-parsley-errors-container="#fromDateErrorContainers" maxlength="10" tabindex="4"/>
                        </div>
                        <div class="double-input">
                            <input type="text" id="toDate" class="form-control number persian-date" placeholder="____/__/__" value="@DateTime.Now.ToPersianDateString("{0}/{1}/{2}")" data-inputmask="'mask':'9999/99/99'" data-parsley-shamsidate data-parsley-errors-container="#toDateErrorContainer" maxlength="10" tabindex="5"/>
                        </div>
                    </div>
                    <div class="double-input-box">
                        <div class="double-input" id="fromDateErrorContainers"></div>
                        <div class="double-input" id="toDateErrorContainer"></div>
                    </div>
                </div>
                <div class="form-group col-sm-5">
                    <button id="searchPurchasePerson" type="button" class="btn btn-light border-green" style="margin-top:22.5px" tabindex="6"><i class="fa fa-search ml-2"></i>جستجو</button>
                </div>
            </div>
        </fieldset>

        <fieldset class="group-box group-box-green mt-3" id="boxQuickSearch">
            <legend>پیش نمایش</legend>
            <div class="card-body " id="quickSearchPageTable">
                @await Html.PartialAsync("/Modules/NewPageTable.cshtml")
            </div>
        </fieldset>

        <fieldset class="group-box group-box-orange mt-3">
            <legend>نمایش گردش</legend>
            <div class="card-body " id="quickSearchTypePageTable">
                @await Html.PartialAsync("/Modules/NewPageTable.cshtml")
            </div>
        </fieldset>

    </div>
</div>

<div id="displayPersonOrderLineModel" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
