@{
    ViewBag.Title = "انبارها";
}

@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")
<!--Modal-->
<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-md">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-12">
                        <label>نام انبار</label>
                        <div>
                            <input id="name" type="text" class="form-control" maxlength="50" title="" required tabindex="1" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شعبه</label>
                        <div>
                            <select id="branchId" type="text" class="form-control select2" required title="" tabindex="2" data-parsley-errors-container="#branchIdError">
                            </select>
                        </div>
                        <div id="branchIdError"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>کشور </label>
                        <div>
                            <select id="locCountryId" class="form-control select2" required data-parsley-errors-container="#locCountryIdError" tabindex="3">
                            </select>
                        </div>
                        <div id="locCountryIdError"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>ولایت </label>
                        <div>
                            <select id="locStateId" class="form-control select2" data-parsley-errors-container="#stateIdError" tabindex="4">
                            </select>
                        </div>
                        <div id="stateIdError"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شهر </label>
                        <div>
                            <select id="locCityId" class="form-control select2" data-parsley-errors-container="#locCityIdError" tabindex="5">
                            </select>
                        </div>
                        <div id="locCityIdError"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>نمبر خانه (Postal Code)</label>
                        <div>
                            <input id="postalCode" type="text" class="form-control str-number" maxlength="10" title="" tabindex="6">
                        </div>
                    </div>

                    <div class="form-group col-sm-6">
                        <label>وضعیت</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="7">
                            <input id="isActive" type="checkbox" name="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>روش هزینه‌یابی</label>
                        <div>
                            <select id="costingMethodId" class="form-control select2" title="" tabindex="8">
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label>آدرس</label>
                        <div>
                            <input id="address" type="text" class="form-control" maxlength="100" title="" tabindex="9">
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="modal_save();" class="btn btn-success waves-effect waves-light" tabindex="10" title="Ctrl + S"><i class="fa fa-save"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect" title="Esc"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>
<!--Modal-->
<script src="/Modules/FM/getJsonDataAsync.js"></script>
<script src="/Modules/FM/Finanace.js"></script>
<script src="/Modules/WH/Warehouse/WarehouseIndex.js"></script>