@{
    ViewBag.Title = "گزارش کنترلی داکتران";
}

<div class="content-page  displaynone" id="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card m-b-30 m-t-15">
                        <div class="header-title d-flex">
                            <span>@ViewBag.Title</span>
                            <div class="button-items">
                                <button id="getReport" class="btn green_2 waves-effect waves-light" tabindex="4"><i class="fas fa-sticky-note ml-1"></i>پیش نمایش</button>
                                <button id="showReport" type="button" class="btn btn-warning" tabindex="5"><i class="fas fa-file-import ml-1"></i>تهیه گزارش</button>
                                @await Html.PartialAsync("/Modules/_Report/_SettingReport.cshtml")
                                <button type="button" id="exportCSV" onclick="exportd_insurerControl_csv()" class="btn btn-excel waves-effect" tabindex="6"><i class="fa fa-file-excel ml-2"></i>اکسل</button>
                            </div>
                        </div>

                        <div class="card-body" data-parsley-validate>
                            <fieldset class="group-box group-box-gray">
                                <button type="button" onclick="plus(this)" class="btn btn-light border-dark plus">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <legend>فیلتر</legend>
                                <div class="slideToggle open">
                                    <div class="row">
                                        <div class="form-group col-lg-2 col-sm-4 mb-0">
                                            <div class="form-group">
                                                <label>داکتر</label>
                                                <div>
                                                    <select class="select2 form-control" id="attenderId" tabindex="1">
                                                        <option value="0">انتخاب کنید...</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-sm-6 mb-0">
                                            <div class="form-group">
                                                <label>نوع گزارش</label>
                                                <select id="type" data-placeholder="انتخاب کنید" required class="form-control" tabindex="2" data-parsley-errors-container="#typeErrorContainer">
                                                    <option value="1" selected>داکتران فاقد تقویم</option>
                                                    <option value="2">داکتران فاقد خدمت</option>
                                                    <option value="3"> داکتران فاقد تقویم و خدمت</option>
                                                    <option value="4"> داکتران دارای خدمت - فاقد تعرفه</option>
                                                </select>
                                                <div id="typeErrorContainer"></div>
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-2 col-sm-2 mb-0">
                                            <label>وضعیت خدمت</label>
                                            <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'serviceStatus');" tabindex="3">
                                                <input id="serviceStatus" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset class="group-box group-box-gray mt-3">
                                <legend>پیش نمایش</legend>
                                <div class="pagetable-report" id="mainReport">
                                    @await Html.PartialAsync("/Modules/PageTableReport.cshtml")
                                </div>
                            </fieldset>

                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</div>

<script type="text/javascript" src="/Modules/MC/ReportControl/AttenderControlReport.js"></script>