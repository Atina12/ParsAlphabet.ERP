@{
    ViewBag.Title = "داکتر ارجاع دهنده";
}

@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")

<!--Modal-->
<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-md">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right pr-0">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label>نام</label>
                        <div>
                            <input id="firstName" type="text" class="form-control atoz-valid" title=" " required maxlength="50" tabindex="1">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label> تخلص</label>
                        <div>
                            <input id="lastName" type="text" class="form-control atoz-valid" title=" " required maxlength="50" tabindex="2">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>جنسیت</label>
                        <div>
                            <select id="genderId" class="form-control select2" title="" data-parsley-selectvalzero tabindex="3">
                                <option value="0">انتخاب کنید</option>
                                <option value="1">مرد</option>
                                <option value="2">زن</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>تخصص</label>
                        <div>
                            <select id="specialityId" class="form-control select2" titleId="specialityName" required title="" tabindex="4" data-parsley-errors-container="#specialityIdErrorContainer"></select>
                        </div>
                        <div id="specialityIdErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>نوع نظام داکتری</label>
                        <div>
                            <select id="msC_TypeId" type="text" class="form-control select2" title="" tabindex="5" required data-parsley-errors-container="#msC_TypeIdErrorContainer"></select>
                        </div>
                        <div id="msC_TypeIdErrorContainer">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شماره نظام داکتری</label>
                        <div>
                            <input id="msc" type="text" class="form-control " title=" " maxlength="10" required placeholder="" tabindex="6">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>تلفن ثابت</label>
                        <div>
                            <input id="phoneNo" type="text" class="form-control str-number" data-parsley-phoneno title="" maxlength="11" placeholder="" tabindex="7">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شماره موبایل</label>
                        <div>
                            <input id="mobileNo" type="text" class="form-control str-number" data-parsley-mobileno title="" placeholder="" maxlength="11" tabindex="8">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>نقش</label>
                        <div>
                            <select id="roleId" class="form-control select2" title="" tabindex="9" required data-parsley-selectvalzero data-parsley-errors-container="#roleIdErrorContainer">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="roleIdErrorContainer">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>ولایت</label>
                        <div>
                            <select id="locStateId" class="form-control select2" tabindex="10" required data-parsley-selectvalzero data-parsley-errors-container="#LocStateIdContainer">
                                <option value="0" selected>انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="LocStateIdContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شهر</label>
                        <div>
                            <select id="locCityId" class="form-control select2" tabindex="11" required data-parsley-selectvalzero data-parsley-errors-container="#LocCityIdContainer">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="LocCityIdContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label> وضعیت</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="12">
                            <input id="isActive" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label>آدرس</label>
                        <div>
                            <input id="address" type="text" class="form-control" title=" " placeholder="" tabindex="13">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="modal_save();" class="btn btn-success waves-effect waves-light" tabindex="14" title="Ctrl + S"><i class="fa fa-save"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect"><i class="fa fa-times-circle" title="Esc"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>
<!--Modal-->

<script src="/Modules/MC/ReferringDoctor/ReferringDoctorIndex.js"></script>