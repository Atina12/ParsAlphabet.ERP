@{
    ViewBag.Title = "غرفه ها";
}

@await Html.PartialAsync("/Modules/NewFormPlate1V1.cshtml")


<!--Modal-->
<div id="AddEditModal" class="modal fade" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="modal_title" aria-hidden="true" onkeydown="modal_onkeydown(event, this)">
    <div class="modal-dialog modal-size-md">
        <div class="modal-content">
            <div class="modal-header bg-header">
                <div class="text-right pr-0">
                    <h5 class="modal-title mt-0" id="modal_title">افزودن ویرایش</h5>
                </div>
            </div>
            <div class="modal-body modal-max-height text-right" id="admissionCounterForm" data-parsley-validate>
                <div class="row" id="rowKeyId">
                    <div class="d-block w-100 text-right mb-2 pr-3">
                        <div class="key_id">
                            <lable id="modal_keyid_caption"></lable>
                            <span id="modal_keyid_value"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label>کاربر</label>
                        <div>
                            <select id="counterUserId" class="form-control select2" title="" required data-parsley-existcounteruser data-parsley-errors-container="#counterUserIdErrorContainer" tabindex="1"></select>
                        </div>
                        <div id="counterUserIdErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>شعبه</label>
                        <div>
                            <select id="branchId" class="form-control" title="" required data-parsley-selectvalzero="" tabindex="2" data-parsley-errors-container="#branchIdErrorContainer">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="branchIdErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>صندوق</label>
                        <div>
                            <select id="cashierId" class="form-control select2" data-parsley-existcashir="" title="" tabindex="3" data-parsley-errors-container="#cashierIdErrorContainer">
                                <option value="0">انتخاب کنید</option>
                            </select>
                        </div>
                        <div id="cashierIdErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>ماهیت غرفه</label>
                        <div>
                            <select id="counterTypeId" class="form-control select2" title="" required data-parsley-errors-container="#counterTypeIdErrorContainer" tabindex="4"></select>
                        </div>
                        <div id="counterTypeIdErrorContainer"></div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label> وضعیت</label>
                        <div class="funkyradio funkyradio-success" onkeydown="funkyradio_keydown(event,'isActive');" tabindex="5">
                            <input id="isActive" type="checkbox" onchange="funkyradio_onchange(this)" switch-value="فعال,غیرفعال"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="modal-save" onclick="modal_save();" class="btn btn-success waves-effect waves-light" tabindex="6" title="Ctrl + S"><i class="fa fa-check-circle"></i>ذخیره</button>
                <button id="modal-close" onclick="modal_close()" class="btn btn-secondary waves-effect" title="Esc"><i class="fa fa-times-circle"></i>انصراف</button>
            </div>
        </div>
    </div>
</div>
<!--Modal-->


<script src="~/Modules/MC/AdmissionCounter/AdmissionCounterIndex.js"></script>